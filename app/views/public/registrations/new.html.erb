<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <table>
    <tr class="field">
      <td><%= f.label :名前 %></td>
      <td>
        <%= f.label :last_name, "(姓)" %>
        <%= f.text_field :last_name, autofocus: true %>
      </td>
      <td>
        <%= f.label :first_name, "(名)" %>
        <%= f.text_field :first_name, autofocus: true %>
      </td>
    </tr>

    <tr class="field">
      <td><%= f.label :フリガナ %></td>
      <td>
        <%= f.label :last_name_kana, "(セイ)" %>
        <%= f.text_field :last_name_kana, autofocus: true %>
      </td>
      <td>
        <%= f.label :first_name_kana, "(メイ)" %>
        <%= f.text_field :first_name_kana, autofocus: true %>
      </td>
    </tr>

    <tr class="field">
    　<td><%= f.label :email, "メールアドレス" %></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>

    <tr class="field">
      <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
      <td><%= f.text_field :postal_code, autofocus: true %></td>
    </tr>

    <tr class="field">
      <td><%= f.label :address, "住所" %></td>
      <td><%= f.text_field :address, autofocus: true %></td>
    </tr>

    <tr class="field">
      <td><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></td>
      <td><%= f.text_field :telephone_number, autofocus: true %></td>
    </tr>

    <tr class="field">
      <td>
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
      </td>
      <% end %>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>

    <tr class="field">
      <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>

    <tr class="actions">
      <td></td>
      <td><%= f.submit "新規登録" %></td>
    </tr>
  </table>
<% end %>

<div>既に登録済みの方</div>
<div>
  <%= render "public/shared/links" %>からログインしてください
</div>