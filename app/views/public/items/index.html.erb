<div class="container my-4">
  <div class="row">
    <div class="col-sm-3">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="text-center"><ジャンル検索></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= link_to genre.name, items_path(genre_id: genre.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-sm-9">
      <% if params[:genre_id] %>
        <h3><%= @genre.name %>一覧</h3>
      <% else %>
        <h4>商品一覧</h4>
      <% end %>

      <div class="d-flex flex-wrap">
        <% @items.each do |item| %>
          <div class="m-3">
            <div>
              <%= link_to item_path(item.id) do %>
                <%= image_tag item.get_image(200,100) %>
              <% end %>
            </div>
            <div><%= item.name %></div>
            <div>¥<%= item.price.to_s(:delimited) %></div>
          </div>
        <% end %>
      </div>
      <% if !params[:genre_id] %>
        <div class="d-flex justify-content-center"><%= paginate @items %></div>
      <% end %>
    </div>
  </div>
</div>


