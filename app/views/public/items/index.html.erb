<table>
  <thead>
    <tr>
      <th></th>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= link_to genre.name, items_path(genre_id: genre.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if params[:genre_id] %>
<h4><%= @genre.name %>一覧</h4>
<% else %>
<h4>商品一覧</h4>
<% end %>

  <% @items.each do |item| %>
    <div>
        <div>
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.get_image(200,100) %>
          <% end %>
        </div>
        <div><%= item.name %></div>
        <div>¥<%= item.price.to_s(:delimited) %></div>
    </div>
  <% end %>


