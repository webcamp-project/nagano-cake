<div class="container my-4">
  <div class="row">
    <div class="col-sm-10">
      <h4>ショッピングカート</h4>
    </div>
    <div class="col-sm-2">
      <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger btn-danger btn-circle btn-sm" %>
    </div>
  </div>
    <h4><%= notice %></h4>
    <div class="row">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @cart_items.each do |cart_item| %>
            <td>
              <%= image_tag cart_item.item.get_image(100,50) %>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.price.to_s(:delimited) %></td>
            <td>
              <%= form_with model: cart_item, url: cart_item_path(cart_item.id), local: true do |f| %>
              <%= f.select :amount, *[1..10] %>
              <%= f.submit '変更' %>
              <% end %>
            </td>
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
            <td><%= link_to "削除", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger btn-danger btn-circle btn-sm col-sm-8" %></td>
            </tr>
            <% @sum +=  cart_item.subtotal %>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="row">
      <div class="col-sm-4">
        <%= link_to "買い物を続ける", items_path, class: "btn btn-primary btn center-block" %>
      </div>
      <div class="col-sm-5"></div>
      <div class="col-sm-3">
        <table class="table table-bordered">
          <th class="bg-light">合計金額</th>
          <td><%= @sum %></td>
        </table>
      </div>
    </div>

    <div class="row mt-5">
      <div class="offset-5">
        <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success btn-success btn-circle btn-md" %>
      </div>
    </div>
</div>




