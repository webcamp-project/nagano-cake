<h4>注文情報入力</h4>

  <%= form_with model: @order, url: orders_confirm_path, method: :post  do |f| %>
  <div>
    <h5><strong>支払い方法</strong></h5>
      <div>
        <div>
          <%= f.radio_button :payment_method, :credit_card, checked:true %>
          <%= f.label :payment_method, 'クレジットカード' %>
        </div>
        <div>
          <%= f.radio_button :payment_method, :transfer %>
          <%= f.label :payment_method, '銀行振込' %>
        </div>
      </div>

    <h5><strong>お届け先</strong></h5>
      <div>
        <label><%= f.radio_button :send_address, 0 %>ご自身の住所</label>
        <div><%= current_customer.postal_code %> <%= current_customer.address %> <%= current_customer.full_name %></div>
      </div>
      <div>
        <label><%= f.radio_button :send_address, 1 %>登録済住所から選択</label>
        <div><%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display) %></div>
      </div>
        <label><%= f.radio_button :send_address, 2 %>新しい住所</label>
      <div>
        <label>郵便番号(ハイフンなし)</label>
        <label><%= f.text_field :postal_code %><label>
      </div>
      <div>
        <label>住所</label>
        <label><%= f.text_field :address %><label>
      </div>
      <div>
        <label>宛名</label>
        <label><%= f.text_field :name %><label>
      </div>
      <div><%= f.submit "確認画面に進む" %></div>
  </div>
  <% end %>