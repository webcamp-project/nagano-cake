<div class="container my-4">
  <div class="row">
    <h4 class="bg-light">注文情報入力</h4>
  </div>
  <p><%= notice %></p>

  <%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
    <div>
      <h5><strong>支払い方法</strong></h5>
        <div class="offset-1">
          <div>
            <%= f.radio_button :payment_method, :credit_card, checked:true %>
            <%= f.label :payment_method, 'クレジットカード' %>
          </div>
          <div>
            <%= f.radio_button :payment_method, :transfer %>
            <%= f.label :payment_method, '銀行振込' %>
          </div>
        </div>

      <h5><strong>お届け先</strong></h5>
        <div class="offset-1">
          <div class="my-2">
            <label><%= f.radio_button :send_address, 0 %>ご自身の住所</label>
            <div class="mx-5"><%= current_customer.postal_code %> <%= current_customer.address %> <%= current_customer.full_name %></div>
          </div>
          <div class="my-2">
            <label><%= f.radio_button :send_address, 1 %>登録済住所から選択</label>
            <div class="mx-5"><%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display), size: "40" %></div>
          </div>
            <label><%= f.radio_button :send_address, 2 %>新しい住所</label>
          <div class="mx-5 mb-2">
            <label class="col-md-3">郵便番号(ハイフンなし)</label>
            <label><%= f.text_field :postal_code %></label>
          </div>
          <div class="mx-5 mb-2">
            <label class="col-md-3">住所</label>
            <label><%= f.text_field :address, size: "60" %><label>
          </div>
          <div class="mx-5 mb-2">
            <label class="col-md-3">宛名</label>
            <label><%= f.text_field :name%><label>
          </div>
        </div>
    </div>
  <div class="row offset-5">
    <div><%= f.submit "確認画面に進む", class: "btn btn-primary btn center-block" %></div>
  </div>
  <% end %>
</div>