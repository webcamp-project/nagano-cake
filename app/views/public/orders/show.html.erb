<div class="container height">
  <div class="my-3">
    <h4>注文履歴詳細</h4>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <div class="my-2"><strong>注文情報</strong></div>
        <table class="table table-bordered">
          <thead class="thead-light">
            <tr>
              <th>注文日</th>
              <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <th class="">配送先</th>
              <td>
                <%= @order.postal_code %><br>
                <%= @order.address %><br>
                <%= @order.name %>
              </td>
            </tr>
            <tr>
              <th>支払方法</th>
              <td><%= Order.payment_methods_i18n[@order.payment_method] %></td>
            </tr>
            <tr>
              <th>ステータス</th>
              <td><%= Order.receive_statuses_i18n[@order.receive_status] %></td>
            </tr>
            </thead>
        </table>
    </div>

    <div class="col-sm-6">
      <div class="mx-3 my-2"><strong>請求情報</strong></div>
        <table class="table table-bordered mx-3">
          <thead class="thead-light">
            <tr>
              <th style="width: 60%">商品合計</th>
              <td><%= @total.to_s(:delimited) %></td>
            </tr>
            <tr>
              <th style="width: 60%">配送料</th>
              <td>800</td>
            </tr>
            <tr>
              <th style="width: 60%"><strong>ご請求金額</strong></th>
              <td><%= (@total+800).to_s(:delimited) %></td>
            </tr>
          </thead>
        </table>
    </div>

    <div class="col-sm-8">
      <div class="my-2"><strong>注文内容</strong></div>
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>商品</th>
            <th>単価 (税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.item.add_tax_price.to_s(:delimited) %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.subtotal.to_s(:delimited) %></td>
              <% @total += order_detail.subtotal %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>