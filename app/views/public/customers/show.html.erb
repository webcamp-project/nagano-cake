<div class="container my-4">
  <div class="row">
    <div class="offset-1">
      <h5 class="bg-light">マイページ</h5>
    </div>
  </div>
  <div class="my-3">
    <label class="mr-3"><strong>登録情報</strong></label>
    <%= link_to "編集する", edit_customer_path(@customer.id), class: "btn btn-success btn-success btn-circle btn-sm" %>
  </div>

  <div class="row">
    <div class="col-sm-9">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr><th style="width: 30%">氏名</th><td><%= @customer.last_name %> <%= @customer.first_name %></td></tr>
          <tr><th style="width: 30%">カナ</th><td><%= @customer.full_name_kana %></td></tr>
          <tr><th style="width: 30%">郵便番号</th><td><%= @customer.postal_code %></td></tr>
          <tr><th style="width: 30%">住所</th><td><%= @customer.address %></td></tr>
          <tr><th style="width: 30%">電話番号</th><td><%= @customer.telephone_number %></td></tr>
          <tr><th style="width: 30%">メールアドレス</th><td><%= @customer.email %></td></tr>
        </thead>
      </table>
    </div>
  </div>

  <div class="my-3">
    <label class="col-sm-2"><strong>配送先</strong></label>
    <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary btn center-block btn-sm" %>
  </div>
  <div>
    <label class="col-sm-2"><strong>注文履歴</strong></label>
    <%= link_to "一覧を見る", orders_path, class: "btn btn-primary btn center-block btn-sm" %>
  </div>
</div>