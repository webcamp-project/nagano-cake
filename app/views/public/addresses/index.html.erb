<div class="container my-4">
  <div class="row">
    <h4 class="bg-light">配送先登録/一覧</h4>
  </div>
  <p id="notice"><%= notice %></p>

  <% if @address.errors.any? %>
    <%= @address.errors.count %>件のエラーが発生しました
    <ul>
      <% @address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @address, url: addresses_path, local:true do |f| %>
    <div>
      <label class="col-sm-3"><strong>郵便番号(ハイフンなし)</strong></label>
      <%= f.text_field :postal_code %>
    </div>
    <div>
      <label class="col-sm-3"><strong>住所</strong></label>
      <%= f.text_field :address, size: "40" %>
    </div>
    <div>
      <label class="col-sm-3"><strong>宛名</strong></label>
      <%= f.text_field :name %>
      <label class="col-sm-3"></label>
      <%= f.submit '新規登録', class: "btn btn-success btn-success btn-circle btn-sm col-sm-2" %>
    </div>
  <% end %>

  <div class="row my-5">
    <table class="table table-bordered col-sm-8">
      <thead class="thead-light">
        <tr>
          <th style="width: 15%">郵便番号</th>
          <th style="width: 40%">住所</th>
          <th style="width: 15%">宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success btn-success btn-circle btn-sm" %>
              <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger btn-danger btn-circle btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
