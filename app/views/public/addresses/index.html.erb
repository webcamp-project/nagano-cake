<div class="container my-4">
  <div>
    <h4 class="bg-light">配送先登録/一覧</h4>
  </div>
  <p id="notice"><%= notice %></p>

  <% if @address.errors.any? %>
    <%= @address.errors.count %>件のエラーが発生しました
    <ul>
      <% @address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

<%= form_with model: @address, url: addresses_path, local:true do |f| %>
  <div>
    郵便番号(ハイフンなし)
    <%= f.text_field :postal_code %>
  </div>
  <div>
    住所
    <%= f.text_field :address %>
  </div>
  <div>
    宛名
    <%= f.text_field :name %>
  </div>
  <div>
    <td></td>
    <td><%= f.submit '新規登録' %></td>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(address.id) %>
          <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
