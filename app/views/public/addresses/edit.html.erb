<div class="container">
  <div class="row">
    <h4 class="bg-light">配送先編集</h4>
  </div>
  <p id="notice"><%= notice %></p>

    <% if @address.errors.any? %>
      <%= @address.errors.count %>件のエラーが発生しました
      <ul>
        <% @address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

  <%= form_with model: @address, url: address_path, local:true do |f| %>
    <div>
      <label class="col-sm-3"><strong>郵便番号(ハイフンなし)</strong></label>
      <%= f.text_field :postal_code %>
    </div>
    <div>
      <label class="col-sm-3"><strong>住所</strong></label>
      <%= f.text_field :address, size: "40" %>
    </div>
    <div>
      <label class="col-sm-3"><strong>宛名</strong></label>
      <%= f.text_field :name %>
      <label class="col-sm-2"></label>
      <%= f.submit '変更内容を保存', class: "btn btn-success btn-success btn-circle btn-sm" %>
    </div>
  <% end %>
</div>