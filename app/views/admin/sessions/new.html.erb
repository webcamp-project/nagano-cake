<div class="container">
  <div class="row">
    <div class="offset-sm-3 col-xs-6 my-3">
      <h4 class="mt-3 bg-light">管理者ログイン</h4>
    </div>
  </div>
  <div class="row">
    <div class ="offset-sm-3 col-sm-6">
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="field form-group">
          <%= f.label :メールアドレス, class: "col-md-4" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field form-group">
          <%= f.label :パスワード, class: "col-md-4" %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
        <div class="offset-sm-4 col-sm-3">
          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-primary btn center-block my-4" %>
          </div>
        </div>
      <% end %>
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
