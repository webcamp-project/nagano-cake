<div class ="container">
  <div class ="row">
    <div class="col-xs-6" >
      <h2 class="mt-3">管理者ログイン</h2>
    </div>
  </div>
  <div class="row">
    <div class ="offset-sm-3 col-sm-6">
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="field">
          <%= f.label :メールアドレス, class: "col-md-4" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :パスワード, class: "col-md-4" %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary btn-lg center-block" %>
        </div>
      <% end %>
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
