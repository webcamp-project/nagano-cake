<h4>商品編集</h4>

  <% if @item.errors.any? %>
    <%= @item.errors.count %>件のエラーが発生しました
    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @item, url: admin_item_path, local:true do |f| %>
    <div>
      <label>商品画像</label>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div>
      <label>商品名</label>
      <%= f.text_field :name %>
    </div>
    <div>
      <label>商品説明<label>
      <%= f.text_area :introduction %>
    </div>
    <div>
      <label>ジャンル</label>
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
    </div>
    <div>
    <label>税抜価格</label>
      <%= f.text_field :price %>円
    </div>
    <label>販売ステータス</label>
    <label><%= f.radio_button :is_active, true %>販売中</label>
    <label><%= f.radio_button :is_active, false %>販売停止中</label>
    <%= f.submit '変更を保存' %>
  <% end %>


