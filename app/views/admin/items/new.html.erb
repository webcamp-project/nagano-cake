<div class="container">
  <div class="row">
    <div class="offset-sm-1">
    <h4 class="my-4">商品新規登録</h4>
    </div>
  </div>

  <% if @item.errors.any? %>
    <%= @item.errors.count %>件のエラーが発生しました
    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @item, url: admin_items_path do |f| %>
    <div class="offset-sm-2 col-md-10">
      <div>
        <%= f.label :商品画像 ,class: "col-md-3" %>
        <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div>
        <%= f.label :商品名 ,class: "col-md-3" %>
        <%= f.text_field :name, class: "col-md-5" %>
      </div>
      <div>
        <%= f.label :商品説明 ,class: "col-md-3" %>
        <%= f.text_area :introduction, class: "col-md-5" %>
      </div>
      <div>
        <%= f.label :ジャンル ,class: "col-md-3" %>
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
      </div>
      <div>
        <%= f.label :税抜価格 ,class: "col-md-3" %>
        <%= f.text_field :price, class: "col-md-5" %>円
      </div>
      <div>
        <%= f.label :販売ステータス ,class: "col-md-3" %>
        <%= f.radio_button :is_active, true %>販売中
        <%= f.radio_button :is_active, false %>販売停止中
      </div>
      <div class="row">
        <div class="col-md-5"></div>
        <div><%= f.submit '新規登録', class: "btn btn-success btn-success btn-circle btn-lg my-3" %></div>
      </div>
    </div>
  <% end %>
</div>
