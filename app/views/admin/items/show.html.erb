<div class="container my-5">
  <div>
    <h4>商品詳細</h4>
  </div>
  <div class="row mt-3">
    <div>
      <%= image_tag @item.get_image(300,200) %>
    </div>
    <div class="col-sm-5">
        <table class="table table-borderless">
          <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>
            税込価格<br>
            (税込価格)
          </th>
          <td><%= @item.price.to_s(:delimited) %> (<%= @item.add_tax_price.to_s(:delimited) %>)</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active %>
              <div class="text-success">販売中</div>
            <% else %>
              <div class="text-secondary">販売停止中</div>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="offset-sm-4 col-sm-2">
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success btn-success btn-circle btn-lg" %>
    </div>
  </div>
</div>