<div class="container my-5">
  <div>
    <h4>商品詳細</h4>
  </div>
  <div class="row mt-3">
    <div>
      <%= image_tag @item.get_image(300,200) %>
    </div>
    <div class="offset-sm-1 col-sm-3">
      <%= form_with model: @item, url: admin_item_path do |f| %>
        <table class="table table-borderless">
          <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td class="offset-sm-6"><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>
            税込価格<br>
            (税込価格)
          </td>
          <td><%= @item.price.to_s(:delimited) %> (<%= @item.add_tax_price.to_s(:delimited) %>) </td>
        </tr>
        <tr>
          <td class="col-md-7">販売ステータス</td>
          <td>
            <% if @item.is_active %>
              <div class="text-success">販売中</div>
            <% else %>
              <div class="text-secondary">販売停止中</div>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="offset-sm-4 col-sm-2">
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success btn-success btn-circle btn-lg" %></div>
    <% end %>
  </div>
</div>