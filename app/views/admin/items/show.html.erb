<h4>商品詳細</h4>

<%= image_tag @item.get_image(300,450) %>

 <%= form_with model: @item, url: admin_item_path do |f| %>
    <div>
      <label>商品名</label>
      <%= @item.name %>
    </div>
    <div>
      <label>商品説明</label>
      <%= @item.introduction %>
    </div>
    <div>
      <label>ジャンル</label>
      <%= @item.genre.name %>
    </div>
    <div>
      <label>
        税込価格<br>
        (税込価格)
      </label>
        <%= @item.price.to_s(:delimited) %> (<%= @item.add_tax_price.to_s(:delimited) %>) 円
    </div>
    <div>
    <label>販売ステータス</label>
      <%= @item.is_active ? '販売中' : '販売停止中' %>
    </div>
    <div><%= link_to "編集する", edit_admin_item_path(@item.id) %></div>
  <% end %>