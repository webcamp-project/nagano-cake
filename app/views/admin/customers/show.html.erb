<div class="container my-4">
  <div class="row my-3 ml-4">
    <h4 class="bg-light"><%= @customer.full_name %>さんの会員詳細</h4>
  </div>
  <div class="row">
    <div class="col-sm-7">
      <table class="table table-borderless">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %>  <%= @customer.first_name %><td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @customer.is_delete %>
              <div class="text-secondary">退会</div>
            <% else %>
              <div class="text-success">有効</div>
            <% end %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success btn-success btn-circle btn-sm" %></td>
          <td><%= link_to "注文履歴一覧を見る", admin_path, class: "btn btn-primary btn-primary btn-circle btn-sm" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
