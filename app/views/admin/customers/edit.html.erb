<h4><%= @customer.full_name %>さんの会員詳細</h4>

  <% if @customer.errors.any? %>
    <%= @customer.errors.count %>件のエラーが発生しました
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @customer, url: admin_customer_path, local:true do |f| %>
    <div>
      <label>会員ID</label>
      <%= @customer.id %>
    </div>
    <div>
      <label>氏名</label>
      <%= f.text_field :last_name %>
      <<%= f.text_field :first_name %>
    </div>
    <div>
      <label>フリガナ<label>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
    </div>
    <div>
      <label>郵便番号</label>
      <%= f.text_field :postal_code %>
    </div>
    <div>
      <label>住所</label>
      <%= f.text_field :address %>
    </div>
    <div>
      <label>電話番号</label>
      <%= f.text_field :telephone_number %>
    </div>
    <div>
      <label>電話番号</label>
      <%= f.text_field :telephone_number %>
    </div>

    <div>
      <label>会員ステータス</label>
      <label><%= f.radio_button :is_delete, true %>有効</label>
      <label><%= f.radio_button :is_delete, false %>退会</label>
    </div>
    <%= f.submit '変更を保存' %>
  <% end %>