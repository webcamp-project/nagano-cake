<h4>注文履歴一覧</h4>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order.id) %></td>
        <td><%= order.customer.full_name %></td>
        <td>
          <% @sum = 0 %>
          <% order.order_details.each do |order_detail| %>
          <% @sum += order_detail.amount.to_i %>
          <% end %>
          <%= @sum %>
        </td>
        <td><%= Order.receive_statuses_i18n[order.receive_status] %></td>
      </tr>
    <% end %>
  </tbody>
</table>