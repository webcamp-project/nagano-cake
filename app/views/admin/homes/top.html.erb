<h4>注文履歴一覧</h4>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.customer.full_name %></td>
        <td><%= order.order_details.amount %></td>
        <td><%= order.receive_status %></td>
      </tr>
    <% end %>
  </tbody>
</table>