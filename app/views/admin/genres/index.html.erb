<div class="container my-5">
  <div class="row ml-5">
    <h4 class="bg-light">ジャンル一覧・追加</h4>
  </div>
    <p id="notice"><%= notice %></p>
    <% if @genre.errors.any? %>
      <%= @genre.errors.count %>件のエラーが発生しました
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <div class="my-4">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <%= f.label :ジャンル名, class: "col-md-2 font-weight-bold" %>
        <%= f.text_field :name %>
      <%= f.submit '新規登録' , class: "btn btn-success btn-success btn-circle btn-sm offset-sm-1" %>
    <% end %>
    </div>

    <table class="table table-responsive my-3">
      <thead class="thead-light">
        <tr>
          <th></th>
          <th>ジャンル</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success btn-success btn-circle btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
